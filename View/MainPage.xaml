<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Labbet.MainPage">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Text="All my Film are here" Grid.Row="0" VerticalTextAlignment="End" TextColor="White" />
        <ListView x:Name="lstFilm"  Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" >
                            
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding Source}" FontSize="Small" TextColor="White" />
                                <Label Text="{Binding Value}" FontSize="Micro" TextColor="White" Margin="25,0,0,0"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
     
    </Grid>
</ContentPage>
